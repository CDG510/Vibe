JS

swal({
    title: 'Are you sure?',
    text: "Are you sure you want to delete the user ? This action cannot be undone!",
    type: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, delete it!',
    cancelButtonText: 'No, cancel!',
    confirmButtonClass: 'confirm-class',
    cancelButtonClass: 'cancel-class',
    closeOnConfirm: false,
    closeOnCancel: false
  },
       function(isConfirm) {
    if (isConfirm) {
      swal.disableButtons();
      //ajax stuff to delete from server
      swal({
        title:  'Delete!',
        text:   'User was deleted!',
        type:   'success',
        timer:  2000
      });
    } else {
      swal({
        title:  'Canceled!',
        text:   'User was not deleted!',
        type:   'error',
        timer:  1000
      });
    }
  });

